{
	"name": "file-path-bar",
	"displayName": "File Path Bar",
	"description": "Show file path in status bar.",
	"version": "0.0.1",
	"license": "SEE LICENSE IN LICENSE_1_0.txt",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/source/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "filePathBar.menu",
				"title": "Show Menu",
				"category": "File Path Bar"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "filePathBar.menu",
					"when": "existsActiveTextDocument"
				}
			]
		},
		"configuration": [
			{
				"title": "File Path Bar",
				"properties": {
					"filePathBar.statusBarAlignment": {
						"type": "string",
						"enum": [
							"none",
							"left",
							"right"
						],
						"default": "left",
						"description": "Alignment on status bar. Requires a restart to take effect."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint source --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
